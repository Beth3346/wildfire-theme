{
    "name": "elr/wildfire-theme",
    "type": "wordpress-theme",
    "license": "MIT",
    "description": "WordPress starter theme",
    "homepage": "http://www.wildfire-publicity.com",
    "authors": [
    {
        "name": "Elizabeth Rogers",
        "email": "beth@elizabeth-rogers.com",
        "homepage": "https://github.com/Beth3346"
    }
    ],
    "keywords": [
        "wordpress",
        "theme",
        "twig",
        "timber"
    ],
    "support": {
    },
    "require": {
        "php": ">=5.6.0",
        "composer/installers": "~1.0",
        "timber/timber": "1.2.4",
        "elr/wpadmin": "*",
        "elr/wpsetup": "*",
        "elr/wpsecurity": "*",
        "elr/wpcustomposts": "*",
        "elr/wpthemeoptions": "*",
        "elr/wpshortcodes": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8"
    },
    "scripts": {
        "test": [
            "phpcs"
        ],
        "fix": [
            "phpcbf"
        ]
    },
    "archive" : {
        "exclude": [
            ".editorconfig",
            ".gitattributes",
            ".gitignore",
            ".travis.yml",
            "CONTRIBUTING.md",
            "phpcs.xml",
            "phpunit.xml",
            "tests"
        ]
    }
}
